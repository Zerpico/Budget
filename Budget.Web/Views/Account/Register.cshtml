@model Budget.Web.ViewModels.RegisterViewModel
@{
    Layout = "_LayoutAccount";
}    
    <form class="bg-white p-4"
          data-role="validator"
          data-clear-invalid="2000"
          data-on-error-form="invalidForm"
          method="post" asp-controller="Account" asp-action="Register">

        <h1 class="mb-0">Регистрация</h1>
        <div class="text-muted mb-4">Регистрация нового пользователя</div>
        <div asp-validation-summary="All" class="invalid" style="color: red;"></div>
        <div class="form-group">
            <input type="text" asp-for="DisplayName" data-role="input" placeholder="@Html.DisplayNameFor(d=>d.DisplayName)" data-append="<i class='fa fa-user'></i>">
            <span class="invalid_feedback" asp-validation-for="DisplayName"></span>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Email" data-role="input" placeholder="@Html.DisplayNameFor(d=>d.Email)" data-append="<i class='fa fa-envelope'></i>">
            <span class="invalid_feedback" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" data-role="input" placeholder="@Html.DisplayNameFor(d=>d.Password)" data-append="<i class='fa fa-key'></i>">
            <span class="invalid_feedback" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="PasswordConfirm" type="password" data-role="input" placeholder="@Html.DisplayNameFor(d=>d.PasswordConfirm)" data-append="<i class='fas fa-clone'></i>">
            <span class="invalid_feedback" asp-validation-for="PasswordConfirm"></span>
        </div>

        <div class="form-group d-flex flex-align-center flex-justify-between">
            <button class="button primary" type="submit">Зарегистрироваться</button>
        </div>


    </form>

